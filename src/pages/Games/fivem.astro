          { description: '5 Go de sauvegarde gratuite', icon: 'tabler:rotate-clockwise-2' },
          { description: 'Clé Patreon FiveM incluse', icon: 'tabler:key' },
          { description: 'txAdmin optimisé', icon: 'tabler:table-options' },
