        callToAction: {
          target: '_blank',
          text: 'Essayer gratuitement',
          href: 'https://hebergtonserv.com/store/index.php?rp=/store/fivem/free',
        },
      },
      {
        title: 'Starter',
        subtitle: 'Idéal pour démarrer votre serveur FiveM RP.',
        price: 3.90,
        period: '/ mois',
        items: [
          { description: 'AMD Ryzen 9 5950X (2 cœurs)', icon: 'tabler:cpu' },
          { description: '4 Go RAM DDR4', icon: 'tabler:server' },
          { description: '10 Go SSD NVMe', icon: 'tabler:database' },
