---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'HebergTonServ — Hébergement de jeux premium',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Section **************** -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Découvrir nos offres',
        href: '/offres',
        icon: 'tabler:download',
      },
      { text: 'En savoir plus', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'HebergTonServ Hero Image' }}
  >
    <Fragment slot="title">
      Hébergement de jeux <span class="text-accent dark:text-white highlight">Premium</span>
    </Fragment>

    <Fragment slot="subtitle">
      Profitez d'une latence minimale, d'une installation instantanée et d'une assistance experte pour vos serveurs Minecraft, FiveM, Garry's Mod, et bien plus.
    </Fragment>
  </Hero>

  <!-- Features Section ************ -->

  <Features
    id="features"
    tagline="Pourquoi nous choisir ?"
    title="Des solutions adaptées à vos besoins"
    subtitle="HebergTonServ vous offre des services d'hébergement performants, fiables et adaptés à tous vos projets."
    items={[
      {
        title: 'Serveurs performants',
        description: 'Des serveurs optimisés pour garantir une expérience de jeu fluide et sans interruptions.',
        icon: 'tabler:server',
      },
      {
        title: 'Installation instantanée',
        description: 'Déployez votre serveur en quelques clics grâce à notre interface intuitive.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Assistance 24/7',
        description: 'Notre équipe est disponible à tout moment pour vous accompagner.',
        icon: 'tabler:headset',
      },
      {
        title: 'Latence minimale',
        description: 'Des centres de données stratégiquement situés pour offrir une faible latence.',
        icon: 'tabler:network',
      },
      {
        title: 'Sécurité renforcée',
        description: 'Protégez vos données et vos serveurs grâce à nos solutions de sécurité avancées.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Hautement personnalisable',
        description: 'Des configurations adaptées à vos besoins spécifiques.',
        icon: 'tabler:settings',
      },
    ]}
  />

  <!-- Content Section: Serveurs de jeux -->

  <Content
    isReversed
    tagline="Serveurs de jeux"
    title="Hébergez vos jeux préférés avec facilité"
    items={[
      {
        title: 'Minecraft',
        description: 'Créez votre serveur Minecraft personnalisé avec des mods et plugins en quelques clics.',
      },
      {
        title: 'FiveM',
        description: 'Hébergez votre serveur GTA RP avec une installation simplifiée et des performances optimales.',
      },
      {
        title: 'Garry’s Mod',
        description: 'Lancez vos serveurs Garry’s Mod avec des configurations prêtes à l’emploi.',
      },
    ]}
    image={{
      src: '~/assets/images/hero-image.png',
      alt: 'Serveurs de jeux',
    }}
  >
    <Fragment slot="content">
      Des serveurs adaptés à chaque jeu pour une expérience optimale.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Section: Hébergement Web -->

  <Content
    isAfterContent
    tagline="Solutions web"
    title="Hébergez votre site web avec HebergTonServ"
    items={[
      {
        title: 'Hébergement mutualisé',
        description: 'Des solutions économiques pour héberger votre site web.',
      },
      {
        title: 'Serveurs VPS',
        description: 'Des ressources dédiées pour des performances accrues.',
      },
      {
        title: 'Certificats SSL',
        description: 'Sécurisez vos sites avec des certificats SSL gratuits.',
      },
    ]}
    image={{
      src: '~/assets/images/hero-image.png',
      alt: 'Solutions web',
    }}
  >
    <Fragment slot="content">
      Profitez d’une infrastructure robuste et évolutive pour héberger vos projets web.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- FAQs Widget **************** -->

  <FAQs
    title="Questions fréquentes"
    subtitle="Trouvez des réponses à vos questions sur nos services"
    tagline="FAQ"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Comment créer un serveur Minecraft ?',
        description:
          'Rien de plus simple ! Choisissez une offre Minecraft, configurez votre serveur en quelques clics, et commencez à jouer.',
      },
      {
        title: 'Puis-je migrer mon serveur existant ?',
        description:
          'Oui, notre équipe vous accompagne pour migrer vos serveurs existants vers HebergTonServ sans interruption.',
      },
      {
        title: 'Quels moyens de paiement acceptez-vous ?',
        description: 'Nous acceptons les paiements par carte bancaire, PayPal, et bien d’autres options.',
      },
    ]}
  />

  <!-- Stats Widget **************** -->

  <Stats
    stats={[
      { title: 'Clients satisfaits', amount: '15K+' },
      { title: 'Serveurs actifs', amount: '8K+' },
      { title: 'Temps de disponibilité', amount: '99.99%' },
      { title: 'Support 24/7', amount: '100%' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Commencez maintenant',
        href: '/offres',
        icon: 'tabler:arrow-right',
      },
    ]}
  >
    <Fragment slot="title">
      Hébergez vos serveurs <br class="block sm:hidden" /><span class="sm:whitespace-nowrap">avec HebergTonServ</span>
    </Fragment>

    <Fragment slot="subtitle">
      Découvrez nos offres et profitez d’une expérience de jeu sans compromis.
    </Fragment>
  </CallToAction>
</Layout>
